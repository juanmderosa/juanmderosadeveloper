---
interface Props {
  width: string;
  top: string;
  left: string;
  background: string;
  zindex: string;
}

const { width, left, top, background, zindex } = Astro.props;
---

<div
  class="bigCircle"
  style=`--background: 
    ${background}; 
    width: ${width}; 
    top: ${top}; left: 
    ${left}; 
    z-index: ${zindex}`>
</div>

<style>
  .bigCircle {
    position: absolute;
    border-radius: 100%;
    aspect-ratio: 1/1;
    background: var(--background);
  }

  @media screen and (max-width: 768px) {
    .bigCircle {
      display: none;
    }
  }
</style>
